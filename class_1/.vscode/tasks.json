{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build main and Car",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\main.exe",  // Output executable name
                "${fileDirname}\\main.cpp",
                "${fileDirname}\\Car.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build main.cpp with Car.cpp linked."
        }
    ],
    "version": "2.0.0"
}
